{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2017", "dom"],
    "allowJs": true,
    "jsx": "react-native",
    "declaration": true,
    "sourceMap": true,
    "outDir": "build",
    "rootDir": "src",
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "src/**/*.test.ts",
    "coverage",
    ".jest",
    "jest.config.js",
    "jest.setup.js"
  ]
}
